{
  "manifest_version": 2,

  
"name": "LazyIr Web",
  "description": "This extension connect LazyIr to browser video/audio",
 
 "version": "1.0",

 
 "browser_action": {
    "default_icon": "phone.png"},

  "permissions": [
  "http://localhost/*",
    "tabs","storage" ],
 "content_scripts": [
    {
 "matches": [
        "*://*/*"
      ],    "js": ["jquery.min.js","popup.js"]
,
  "all_frames": true,
"run_at": "document_end"   }
  ]
,
 "background":
    {
        "scripts": ["background.js"],
      "persistent" : true
    }}
